    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7"
    ],
  },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "include": [
    "./src/*",
    "./src/**/*",
    "./globles.d.ts"
  ],
  "exclude": [
